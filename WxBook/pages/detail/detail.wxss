@import "../template/template-star/template-star.wxss";
@import "../template/template-book/template-book.wxss";
.container-main{
    display:flex;
    flex-direction: column;
    font-size: 13px;
    padding: 0;
}

.head-img{
    width:100%;
    height: 320rpx;
    -webkit-filter:blur(10px);
}

.head-img-hover{
    width: 100%;
    height: 320rpx;
    position:absolute;
    top:0;
    left:0;
    display:flex;
    flex-direction: column;
}

.main-title{
    font-size: 19px;
    color:#fff;
    font-weight:bold;
    margin-top: 50rpx;
    margin-left: 40rpx;
    letter-spacing: 2px;
    text-shadow:0px 0px 6px #333;
}

.sub-title{
    font-size: 28rpx;
    color:#fff;
    margin-left: 40rpx;
    margin-top: 30rpx;
}

.like{
    display:flex;
    flex-direction: row;
    margin-top: 30rpx;
    margin-left: 40rpx;
}

.highlight-font{
    color: #f21146;
    font-size:22rpx;
    margin-right: 30rpx;
}

.plain-font{
    color: #666;
    font-size:22rpx;
    margin-right: 20rpx;
}


.book-img-top{
    height:238rpx;
    width: 175rpx;
    position: absolute;
    top:160rpx;
    right: 30rpx;
}

.summary{
    float: left;
    margin:40rpx 40rpx 0 40rpx;
    color: #777777;
}

.original-title{
    color: #1f3463;
    font-size: 24rpx;
    font-weight: bold;
    margin-bottom: 40rpx;
}

.flex-row{
    display:flex;
    flex-direction: row;
    margin-bottom: 20rpx;
}

.mark{
    margin-right: 30rpx;
    white-space:nowrap;
    color: #999999;
}

.hr{
    margin-top:45rpx;
    height:1px;
    width: 100%;
    background-color: #d9d9d9;
}

.synopsis{
    margin-left:40rpx;
    display:flex;
    flex-direction: column;
    margin-top: 50rpx;
}

.synopsis-font{
    color:#999;
}

.summary-content{
    margin-top: 20rpx;
    margin-right: 40rpx;
    line-height:40rpx;
    letter-spacing: 1px;
}

.books-container{
    display: flex;
    flex-direction: row;
}
.xgtj{
  width: 700rpx;
  text-align: left;
  margin: 20rpx auto;
  font-size: 28rpx;
}
.content{
  display: flex;
  flex-direction: column;
}
.icon{
  width: 40rpx;
  height: 40rpx;
  margin-top: 20rpx;
  margin-left: 320rpx;
}




















