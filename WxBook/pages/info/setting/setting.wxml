<view class="setting">
  <view class="setting-one">
    <text>自动推送</text>
    <switch type="switch" checked="{{push}}" color="#333" bindchange="changepush" />  
  </view>
  <view class="setting-one" wx:if="{{p}}">
    <radio-group class="radio-group" bindchange="radioChange">
      <view class="setting-one">
         <radio value="86400" checked="{{time==86400}}" color="#666"/>
         <view class="time">一天</view>
      </view>
      <view class="setting-one">
         <radio value="259200" checked="{{time==259200}}" color="#666"/>
         <view class="time">三天</view>
      </view>
      <view class="setting-one">
         <radio value="604800" checked="{{time==604800}}" color="#666"/>
         <view class="time">七天</view>
      </view>
    </radio-group>
  </view>
</view>